<?xml version="1.0" encoding="UTF-8"?>
<urlset
	xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
	xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">
	{% for item in content %}
		<url>
			<loc>{{item.content_url}}</loc>
			<news:news>
				<news:publication>
					<news:name>Haber</news:name>
					<news:language>tr</news:language>
				</news:publication>
				<news:publication_date>{{item.content_date}}T{{item.content_hours}}+00:00</news:publication_date>
				<news:title><![CDATA[{{item.content_title|raw}}]]></news:title>
				<news:keywords><![CDATA[{{item.content_tags}}]]></news:keywords>
			</news:news>
		</url>
	{% endfor %}
</urlset>
