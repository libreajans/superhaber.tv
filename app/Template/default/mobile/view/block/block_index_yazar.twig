<script>
	$(function(){
		var author_slider = $(".mobile-author-list");
		author_slider.owlCarousel({
			items : 1,
			loop:true,
			margin: 10,
			autoplay:true,
			autoplayTimeout:3000,
			autoplayHoverPause:true,
			dotsContainer: '#mobile-author-list-pager',
			responsive:{
				0:{
					items:1
				},
				480:{
					items:2
				},
				767:{
					items:3
				},
				768:{
					items:3
				},
				960:{
					items:4
				}
			}
		});

		$('.author-next').click(function() { author_slider.trigger('next.owl.carousel'); });
		$(".author-prev").click(function() { author_slider.trigger('prev.owl.carousel'); });
	});
</script>

<div class="mobile-author">
	<div class="mobile-author-title">
		<a title="Yazarlar" href="{{LINK_AUTHOR}}" >
			Yazarlar
		</a>
	</div>
	<ul class="mobile-author-list">
		{% for item in content_list %}
			<li>
				<a
					href="{{item.content_url}}"
					title="{{item.content_title}}">
					<figure class="mobile-author-list-image">
						<img
							src="{{item.author_image_url}}"
							alt="{{item.author_name}}"
							width="200" height="200"
						/>
					</figure>
					<div class="mobile-author-list-title">
						{{item.author_name}}
					</div>
					<div class="mobile-author-list-post">
						{{item.content_title|raw}}
					</div>
				</a>
			</li>
		{% endfor %}
	</ul>
	<div class="mobile-author-list-pager">
		<ul class="mobile-author-list-pager-list" id="mobile-author-list-pager">
			{% for key, item in content_list %}
				<li>
					<a
							href="{{item.content_url}}"
							title="{{item.content_title}}">
						{{key+1}}
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>

