<div class="mobile-surprise-headline">
	<ul class="mobile-surprise-headline-list" id="mobile-surprise-slider">
		{% for item in content_list %}
			<li>
				<a
					href="{{item.content_url}}"
					title="{{item.content_title}}">
					<figure class="mobile-surprise-headline-list-image">
						<img
							src="{{item.content_image_url}}"
							alt="{{item.content_title}}"
							width="226" height="133"
						/>
					</figure>
					<div class="mobile-surprise-headline-list-title">
						{{item.content_title|raw}}
					</div>
				</a>
			</li>
		{% endfor %}
	</ul>
</div>
