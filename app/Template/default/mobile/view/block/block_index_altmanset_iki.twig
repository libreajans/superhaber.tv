<div class="mobile-news-wrapper">
	<ul class="mobile-news-list-horizontal">
		{% for item in content_list %}
		<li>
			<a
				href="{{item.content_url}}"
				title="{{item.content_title}}">
				<figure class="mobile-news-list-horizontal-image">
					<img
						src="{{G_IMGLINK_APP}}lazy.png"
						data-src="{{item.content_image_url}}"
						alt="{{item.content_title}}"
						width="135" height="79"/>
					<noscript>
					<img
						src="{{item.content_image_url}}"
						alt="{{item.content_title}}"
						width="135" height="79"/>
					</noscript>
				</figure>
				<div class="mobile-news-list-horizontal-title">
					{{item.content_title|raw}}
				</div>
			</a>
		</li>
		{% endfor %}
	</ul>
</div>
