<div class="authors-container">
	<div class="author-profile">
		<figure class="author-profile-image">
			<img
				src="{{G_IMGLINK_APP}}lazy.png"
				data-src="{{author_info.author_image_url}}"
				alt="{{author_info.author_name}}"
				width="120" height="120"/>
			<noscript>
				<img
					src="{{author_info.author_image_url}}"
					alt="{{author_info.author_name}}"
					width="120" height="120"/>
			</noscript>
		</figure>
		<div class="author-profile-title">
			{{author_info.author_name}}
		</div>
		<ul class="author-profile-social">
			{% if author_info.author_facebook != "" %}
				<li>
					<a class="facebook" rel="external nofollow" target="_blank" rel="noopener noreferrer" href="{{author_info.author_facebook}}">
						<i class="icon">&#xf09a;</i>
					</a>
				</li>
			{% endif %}
			{% if author_info.author_twitter != "" %}
				<li>
					<a class="twitter" rel="external nofollow" target="_blank" rel="noopener noreferrer" href="{{author_info.author_twitter}}">
						<i class="icon">&#xf099;</i>
					</a>
				</li>
			{% endif %}
			{% if author_info.author_instagram != "" %}
				<li>
					<a class="instagram" rel="external nofollow" target="_blank" rel="noopener noreferrer" href="{{author_info.author_instagram}}">
						<i class="icon">&#xf16d;</i>
					</a>
				</li>
			{% endif %}
			{% if author_info.author_email != "" %}
				<li>
					<a class="email" rel="external nofollow" target="_blank" rel="noopener noreferrer" href="{{author_info.author_email}}">
						<i class="icon">&#xf0e0;</i>
					</a>
				</li>
			{% endif %}
		</ul>
	</div>
</div>
