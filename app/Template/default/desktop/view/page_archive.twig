<link rel="stylesheet" href="{{G_CSSLINK}}vendors/jquery-ui.css">
<link rel="stylesheet" href="{{G_CSSLINK}}vendors/jquery.datetimepicker.css"/>
<script src="{{G_JSLINK}}vendors/jquery.datetimepicker.js"></script>
<script>$(function()
{
	$('#datepicker').datetimepicker({
		timepicker:false,
		lang:'tr',
		format:'Y-m-d',
		formatDate:'Y-m-d',
		minDate:'{{link_mindate}}',
		maxDate:'+today',
		value: "{{time_selected}}",
		onChangeDateTime:function(dp,$input)
		{
			$dt = $input.val();
			window.location.href = '{{link_change}}/'+$dt;
		},
	});
});
</script>

{#{% include 'block/block_reklam.twig' with {type : 'masthead' }%}#}

<main class="archive-list-container">

	<div class="breadcrumb">
		<ul>
			<li>
				<a href="{{LINK_INDEX}}" title="Ana Sayfa">
					<i class="icon">&#xe810;</i> Ana Sayfa
				</a>
			</li>
			<li>
				<i class="icon">&#xe81e;</i> Ar≈üiv
			</li>
			<div class="datepicker" id="datepicker">Tarih: {{time_selected}} </div>
		</ul>
	</div>

	<ul class="archive-list">

		{% for item in arsiv_list %}
		<li>
			<a href="{{item.content_url}}" title="{{item.content_title}}">
				<figure class="archive-list-image">
					<img
						src="{{G_IMGLINK_APP}}lazy.png"
						data-src="{{item.content_thumb_url}}"
						alt="{{item.content_title}}"
						width="222" height="130"/>
					<noscript>
					<img
						src="{{item.content_thumb_url}}"
						alt="{{item.content_title}}"
						width="222" height="130"/>
					</noscript>
				</figure>
				<div class="archive-list-extra">
					<div class="archive-list-time">
						<i class="icon">&#xe82b;</i> {{item.content_hours}}
					</div>
				</div>
				<div class="archive-list-title">
					{{item.content_title|raw}}
				</div>
			</a>
		</li>
		{% endfor %}
	</ul>
</main>

