{% if content_benzer_list|length > 0%}
	<div class="similar-news">
		<ul class="similar-news-list">
			{% for item in content_benzer_list %}
				<li>
					<a href="{{item.content_url}}" title="{{item.content_title}}">
						<figure class="similar-news-list-image">
							<img
								src="{{G_IMGLINK_APP}}lazy.png"
								data-src="{{item.content_thumb_url}}"
								alt="{{item.content_title}}"
								width="186" height="100"/>
							<noscript>
							<img
								src="{{item.content_thumb_url}}"
								alt="{{item.content_title}}"
								width="186" height="100"/>
							</noscript>
							<figcaption class="similar-news-list-title">
								{{item.content_title|raw}}
							</figcaption>
						</figure>
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}
