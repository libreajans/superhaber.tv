<script>
	/**
	Required: utilCarousel
	*/
	$(function()
	{
		$('#photo-video-slider').utilCarousel(
		{
			breakPoints 	: [[1920, 1]],
			mouseWheel		: false,
			autoPlay		: true,
			scrollPerPage	: true,
			lazyLoad 		: false,
			drag			: false,
			touch			: false,
			interval		: 4000,
			showItems		: 1,
			slideSpeed		: 1,
			indexChanged : function(index)
			{
				$("#photo-video-slider-page li ").removeClass("active");
				$("#photo-video-slider-page li:eq("+index+")").addClass("active");
			}
		});
		$("#photo-video-slider-page li:eq(0)").addClass("active");
		$('#photo-video-slider-page li').on('mouseout', function()  { $('#photo-video-slider').data('utilCarousel').play(); });
		$('#photo-video-slider-page li').on('mouseover', function() { $('#photo-video-slider').data('utilCarousel').stop(); });
	});
	function VideoGoToSh(hsItem) { $('#photo-video-slider').data('utilCarousel').goTo(hsItem); }
	function VideoMenuSh(){ $("#vgs-" + index  ).addClass("active"); }
</script>

